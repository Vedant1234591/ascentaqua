        // Convert features string to array on form submission
        document.querySelector('.product-form').addEventListener('submit', function(e) {
            const featuresInput = document.getElementById('features');
            if (featuresInput && featuresInput.value) {
                // This will be handled on the server side now
                // featuresInput.value = featuresInput.value.split(',').map(f => f.trim()).filter(f => f);
            }
        });
    </script>
</body>
</html>